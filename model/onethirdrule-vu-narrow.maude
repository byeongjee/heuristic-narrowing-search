load ./onethirdrule.maude
load ../tool/tool.maude

mod ONETHIRDRULE-VU-NARROW-ANALYSIS is
    protecting ONETHIRDRULE .
    protecting ONETHIRDRULE-CONST .
    including STATE .
    protecting HNR-TOP .

    subsort Global < State .

    vars TH R : Natural .
    vars O O' O1 O2 O3 : Oid .
    vars V1 V2 V3 : Value .
    var OS : OidSet .
    var INITIAL : InitConfiguration .
    vars ATTS ATTS' : U124S .
    var CF : Configuration .
    var PHI : Bool .

    op init3 : Natural Oid Oid Oid Natural Value Value Value -> Global .
    eq init3(TH, O1, O2, O3, R, V1, V2, V3)
    = {TH, O1 ; O2 ; O3,
        < O1 : Node | status : [R, init], value : V1, decision : nil, votes : [0, 0, 0] >
        < O2 : Node | status : [R, init], value : V2, decision : nil, votes : [0, 0, 0] >
        < O3 : Node | status : [R, init], value : V3, decision : nil, votes : [0, 0, 0] >} .
endm

